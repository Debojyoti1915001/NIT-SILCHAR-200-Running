<link rel="stylesheet" href="../css/edit-form.css">

<style>
    #pSec2 {
        height: 89vh;
        overflow-y: scroll;
        padding-right: 0;
    }

    #sub1 {
        height: 70vh;
    }

    #name {
        margin-bottom: 2%;
    }

    #patientDetails {
        margin-bottom: 4%;
        padding: 1% 2% 3% 4%;
        height: auto;
    }


    #heading2 {
        position: relative;
        top: 20px;
        bottom: 10px;
    }

    #sub4 {
        margin-top: 4vh;
        height: unset !important;
    }

    #pSec2::-webkit-scrollbar {
        width: 5.5px;
    }

    #pSec2::-webkit-scrollbar-track {
        background-color: rgb(209, 202, 202);
    }

    #pSec2::-webkit-scrollbar-thumb {
        background-color: #9593a0;
    }

    @media (max-width: 1092px) {
        #sub1 {
            height: 60vh;
        }

    }

    @media (max-width: 860px) {
        #heading2 {
            position: relative;
            top: 10px;
        }

        #sub1 {
            height: 55vh;
        }
    }

    @media (max-width: 576px) {
        #pSec2 {
            height: unset;
            overflow-y: hidden;
        }

        #sub4 {
            margin-top: 0;
            margin-bottom: 20px;
            box-shadow: none !important;

        }

        #patientDetails {
            padding: 4%;
            height: auto;
            /* margin-bottom: 60px; */
        }
    }

    @media (max-width: 420px) {
        #sub4 {
            position: relative;
            bottom: 5vh;
            margin-top: 20%;
        }

        #sub1 {
            height: 50vh;
        }
    }
</style>
