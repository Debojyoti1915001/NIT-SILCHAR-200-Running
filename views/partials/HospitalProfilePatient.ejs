<link rel="stylesheet" href="../css/edit-form.css">

<style>
    #pSec2 {
        height: 89vh;
        overflow-y: scroll;
        padding-right: 0;
    }

    #sub1 {
        height: 70vh;
    }

    #name {
        margin-bottom: 2%;
    }

    #patientDetails {
        margin-bottom: 4%;
        padding: 1% 2% 3% 4%;
        height: auto;
    }


    #heading2 {
        position: relative;
        top: 20px;
        bottom: 10px;
    }

    #sub4 {
        margin-top: 4vh;
        height: unset !important;
    }

    #pSec2::-webkit-scrollbar {
        width: 5.5px;
    }

    #pSec2::-webkit-scrollbar-track {
        background-color: rgb(209, 202, 202);
    }

    #pSec2::-webkit-scrollbar-thumb {
        background-color: #9593a0;
    }

    @media (max-width: 1092px) {
        #sub1 {
            height: 60vh;
        }

    }

    @media (max-width: 860px) {
        #heading2 {
            position: relative;
            top: 10px;
        }

        #sub1 {
            height: 55vh;
        }
    }

    @media (max-width: 576px) {
        #pSec2 {
            height: unset;
            overflow-y: hidden;
        }

        #sub4 {
            margin-top: 0;
            margin-bottom: 20px;
            box-shadow: none !important;

        }

        #patientDetails {
            padding: 4%;
            height: auto;
            /* margin-bottom: 60px; */
        }
    }

    @media (max-width: 420px) {
        #sub4 {
            position: relative;
            bottom: 5vh;
            margin-top: 20%;
        }

        #sub1 {
            height: 60vh;
        }
    }

    #View {
        margin-left: auto;
        margin-right: 2%;
        height: auto;
        width: auto;
        background-color: #019DFA;
        border: none;
        border-radius: 4px;
        padding: 3px 8px;
        color: white;
    }
</style>
<link rel="stylesheet" href="../css/disease.css">

<div class="col-lg-8 col-sm-8 col-12 order-1 order-sm-2" id="pSec2">
    <div class="disease-back-link"><a href="/hospital/profile"><i class="fa fa-arrow-left"
                aria-hidden="true"></i>Home</a>
    </div>
    <div id="sub1">
        <div class="images">
            <img src="../img/CoverPhoto.png" id="coverImg">

            <% if (user.profilePic){%>
                <img src="../uploads/<%=user.email%>/profilePic/<%=user.profilePic%>" id="profileImg">
                <%}else{%>
                    <img src="../img/ProfilePic.png" id="profileImg">
                    <%}%>

                        <img src="../img/camera.png" id="Camera">
        </div>
        <div class="name-id">

            <h5 id="name">
                <%if (user.name) { %>
                    <%=user.name %>
                        <% } %>
            </h5>
            <h4 id="heading1">Patient Id-:<%if (user.short_id) { %>
                    <%=user.short_id %>
                        <% } %><span id="patientId"></span>
            </h4>
            <!-- <h4 id="heading1">Patient Id-<%if (user.short_id) { %>
                <%=user.short_id %>
                <% } %><span id="patientId"></span></h4> -->
        </div>
        <div id="patientDetails">
            <div class="heading-and-edit-icon">
                <h3 id="heading2">Patient Details</h3>
                <!-- <button id="myBtnEdit"  data-toggle="modal" data-target="#myModalEdit" onclick=modalEdit()>
                    <img src="../img/profile-edit-icon.png">
                </button> -->
            </div>
            <!-- <label for="bloodGroup" class="detailLevels">Blood Group : </label>
            <input type="text" class="detailFields" id="bloodGroup">
            <br> -->
            <label for="Address" class="detailLevels">Address : </label>
            <!-- <input type="text" class="detailFields" id="Address"> -->
            <br>
            <label for="PhoneNo" class="detailLevels">Phone No. : <%if (user.phoneNumber) { %>
                    <%=user.phoneNumber %>
                        <% } %> </label>
            <!-- <input type="tel" class="detailFields" id="PhoneNo"> -->
            <br>
            <label for="Email" class="detailLevels">Email : <%if (user.email) { %>
                    <%=user.email %>
                        <% } %> </label>
            <!-- <input type="email" class="detailFields" id="Email"> -->
            <br>
            <label for="bloodGroup" class="detailLevels">Nominee Email: NOminee Email To be corrected</label>
        </div>
    </div>

    <div id="sub4">
        <div class="container">
            <div class="add-documents">

                <h5 id="name1">Patient's Diseases</h5>
            </div>
            <div class="disease-flexbox">

                <% if(diseases.disease.length !==0){%>
                    <%for(var i of diseases.disease){%>
                        <div class="media" id="pat-dis">

                            <a href="/hospital/document?id=<%=i._id%>&userId=<%=user._id%>">
                                <div style="display: inline-block" class="media-heading align-self-center"
                                    id="patientDiseases">
                                    <%=i.name%>
                                </div>
                            </a>
                            <button id="View" onclick="">View</button>
                            <i class="fa fa-medkit fa fa-2x" aria-hidden="true"></i>
                        </div>

                        <%}%>
                            <%}else{%>

                                <div id="name9">No diseases found</div>
                                <%}%>




            </div>
        </div>
    </div>
</div>